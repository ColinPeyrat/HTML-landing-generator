
<!-- JS -->
<script>
	/* Reset img's src tag to stop loading */
	var STF_resetImgs = function( $imgs ) {
		var $img, src;
		
		for ( var i = 0; i < $imgs.length; i++ ) {
			$img		= $imgs[i];
			src			= $img.src;
			
			$img.src	= '';
			$img.src	= '{{ Path.URL.img }}bgs/pattern-transparent.png';
			$img.setAttribute( 'data-src' , src );
		}
	};
	
	STF_resetImgs( document.getElementsByTagName( 'img' ) );
	
	
	{% if Router.CONTENT_TYPE == 'view' %}
	var BASE_URL = '{{ Path.URL.base }}';
	{% endif %}
</script>

